{
  "manifest_version": 3,
  "name": "Api Extension",
  "version": "0.1",
  "description": "a network api extension",
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Api Extension"
  },
  "web_accessible_resources": [
    {
      "resources": ["css/*.css", "js/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-script.js",
        "app.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  }
}